# EditorConfig: unify formatting across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.bat]
end_of_line = crlf
indent_style = tab

[*.cmd]
end_of_line = crlf

[Makefile]
indent_style = tab
