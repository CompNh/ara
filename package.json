{
  "name": "ara-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b",
  "scripts": {
    "changeset": "changeset",
    "release": "changeset version && changeset publish",
    "check:manifests": "node ./scripts/package-governance/check-manifests.mjs",
    "gen:icons": "node ./scripts/generate-icons.mjs",
    "lint": "pnpm exec eslint .",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "storybook": "pnpm --filter @ara/storybook run storybook",
    "storybook:smoke": "pnpm --filter @ara/storybook run storybook:smoke",
    "storybook:build": "pnpm --filter @ara/storybook run build-storybook",
    "workspace:check": "pnpm -w lint && pnpm -w test && pnpm -w build && pnpm -w storybook:smoke",
    "showcase:dev": "pnpm --filter @ara/showcase dev",
    "showcase:build": "pnpm --filter @ara/showcase build",
    "showcase:preview": "pnpm --filter @ara/showcase preview"
  },
  "devDependencies": {
    "@ara/eslint-config": "workspace:*",
    "@ara/tsconfig": "workspace:*",
    "@changesets/cli": "^2.27.8",
    "@types/node": "^24.9.2",
    "eslint": "^9.12.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "fast-xml-parser": "^4.5.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "rollup": "^4.52.5",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-json": "^6.1.0",
    "rollup-plugin-typescript2": "^0.36.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/CompNh/ara.git"
  }
}
