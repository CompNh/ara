{
  "name": "@ara/react",
  "version": "0.1.0-canary.0",
  "description": "Ara 디자인 시스템의 React 컴포넌트 바인딩",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js",
      "default": "./dist/theme/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "default": "./dist/components/index.js"
    },
    "./components/theme-provider": {
      "types": "./dist/components/theme-provider/index.d.ts",
      "import": "./dist/components/theme-provider/index.js",
      "default": "./dist/components/theme-provider/index.js"
    },
    "./components/button": {
      "types": "./dist/components/button/index.d.ts",
      "import": "./dist/components/button/index.js",
      "default": "./dist/components/button/index.js"
    },
    "./button": {
      "types": "./dist/components/button/index.d.ts",
      "import": "./dist/components/button/index.js",
      "default": "./dist/components/button/index.js"
    },
    "./theme-provider": {
      "types": "./dist/components/theme-provider/index.d.ts",
      "import": "./dist/components/theme-provider/index.js",
      "default": "./dist/components/theme-provider/index.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "components": [
        "dist/components/index.d.ts"
      ],
      "components/*": [
        "dist/components/*/index.d.ts"
      ],
      "components/theme-provider": [
        "dist/components/theme-provider/index.d.ts"
      ],
      "button": [
        "dist/components/button/index.d.ts"
      ],
      "theme-provider": [
        "dist/components/theme-provider/index.d.ts"
      ],
      "theme": [
        "dist/theme/index.d.ts"
      ],
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "pnpm --filter @ara/core build",
    "build": "pnpm exec rollup -c",
    "pretest": "pnpm --filter @ara/core build",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest"
  },
  "keywords": [
    "react",
    "design system",
    "ui"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/CompNh/ara.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ara/core": "workspace:*",
    "@ara/tokens": "workspace:*",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-compose-refs": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@ara/tsconfig": "workspace:*",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.3.3",
    "jsdom": "^27.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vitest": "^2.1.3"
  }
}
